<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body style="background-color: #FFEAD0;">

    <% include ../static/partials/navbar1.ejs %>
    
    <div class="main">
      <div class="text-center">
        <h3 id="title" class="display-1" style="color: #37505C; font-family: URW Chancery; font-size: 68px;">Edit Your Review</h3>
      </div>
    </div>
    <br>
    <% include ../static/partials/messages.ejs %>
    <div class="row">
      <div class="col-md-12">                 
        <% include ../static/partials/navbar2.ejs %>
      </div>
    </div>
    <br>
    <br>
    <div class="row">
      <div class="col-md-4"></div>
        <div class="col-md-4">
          <form action="/reviews/<%= review.id %>/update" method="post">
            <ul class="navbar-nav ml-auto">
              <li class="text-center">
                <input type="submit" style="font-weight: bold;" value="Update" class="btn btn-outline-primary" />
              </li>
              <br>
              <li>
                <input class="form-control" type="text" name="title" value="<%= review.title %>"" placeholder="Review Title">
              </li>
              
              <li> 
                <textarea class="form-control" rows="8" cols="8" name="body"><%= review.body %></textarea>
              </li>

            </ul>
          </form>
        </div>
      </div>
      <br>
      <br>
      
  </body>
</html>